<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.vending.DrawFragment">

    <ImageView
        android:contentDescription="vendingMachine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/vendingmachine" />

    <TextView
        android:id="@+id/drawBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/main_solid_box_10dp"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="뽑기"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="end"
        android:text="하루에 하나만 뽑을 수 있어요."
        android:textColor="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="end"
        android:text="레어 스티커를 받을 수 있는 기회를 놓치지 마세요!"
        android:textColor="@color/black" />
</LinearLayout>
