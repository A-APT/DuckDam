<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/login_appname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="덕:담"
            android:fontFamily="@font/dohyeon"
            android:textSize="50sp"
            android:textColor="@color/green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:hint="이메일"
            android:textSize="16sp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="69dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:background="@drawable/white_solid_green_stroke_box_10dp"
            app:layout_constraintTop_toBottomOf="@id/login_appname_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/login_pw"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:hint="비밀번호"
            android:textSize="16sp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:background="@drawable/white_solid_green_stroke_box_10dp"
            app:layout_constraintTop_toBottomOf="@id/login_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/login_login_tv"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="로그인"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="32dp"
            android:paddingVertical="13dp"
            android:background="@drawable/green_solid_box_10dp"
            app:layout_constraintTop_toBottomOf="@id/login_pw"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/login_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 회원이 아니신가요?"
            android:textColor="#6B6B6B"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/login_login_tv"
            app:layout_constraintEnd_toEndOf="@id/login_login_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    /</androidx.constraintlayout.widget.ConstraintLayout>