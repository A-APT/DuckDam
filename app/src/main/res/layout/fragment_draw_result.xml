<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.fragment.vending.DrawFragment">

    <TextView
        android:id="@+id/stickerName"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/speech_bubble"
        android:gravity="center_horizontal"
        android:paddingTop="44dp"
        android:text="안녕 난 사랑니야!"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:src="@drawable/vending_box" />

        <ImageView
            android:id="@+id/stickerImg"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:src="@drawable/sticker06" />
    </FrameLayout>

    <TextView
        android:id="@+id/showContentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_solid_box_10dp"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="칭찬 내용 보기"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myStickerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:background="@drawable/sub1_solid_box_10dp"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="내 스티커 보러가기"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
