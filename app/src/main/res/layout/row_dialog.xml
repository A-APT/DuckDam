<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/row_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="22dp"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/row_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/row_sticker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/sticker06"
        android:layout_marginTop="22dp"
        android:layout_marginStart="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row_view"/>

    <TextView
        android:id="@+id/row_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="맛있는 피자"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/row_sticker"
        app:layout_constraintBottom_toBottomOf="@id/row_sticker"
        app:layout_constraintStart_toEndOf="@id/row_sticker"/>


    <TextView
        android:id="@+id/row_add"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:text="추가하기"
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/main_solid_box_5dp"
        android:textColor="@color/white"
        android:layout_marginEnd="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>