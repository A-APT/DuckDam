<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/splash_appname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="덕:담"
        android:fontFamily="@font/dohyeon"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/splash_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/splash_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="직접 만들어서 붙이는 칭찬 스티커"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/splash_appname_tv"
        app:layout_constraintEnd_toEndOf="@id/splash_appname_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>